@model sample_rails_app_8th_edNT.Models.User
@using sample_rails_app_8th_edNT.Helpers
@{
    ViewBag.Title = "Edit user";
}
<h1>Update your profile</h1>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <form asp-action="Edit" asp-controller="Users" method="post" class="form-horizontal">
            @* Render error messages partial *@
            @await Html.PartialAsync("_ErrorMessages", Model)

            <div class="form-group">
                <label for="Name">Name</label>
                <input name="Name" class="form-control" value="@Model.Name" />
            </div>
            <div class="form-group">
                <label for="Email">Email</label>
                <input name="Email" class="form-control" value="@Model.Email" />
            </div>
            <div class="form-group">
                <label for="Password">Password</label>
                <input name="Password" type="password" class="form-control" />
            </div>
            <div class="form-group">
                <label for="PasswordConfirmation">Confirmation</label>
                <input name="PasswordConfirmation" type="password" class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary">Save changes</button>
        </form>
        <div class="gravatar_edit">
            <img src="@UsersHelper.GravatarFor(Model.Email, Model.Name)" alt="@Model.Name" class="gravatar" />
            <a href="https://gravatar.com/emails" target="_blank">change</a>
        </div>
    </div>
</div>
