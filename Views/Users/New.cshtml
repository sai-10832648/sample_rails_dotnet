@model sample_rails_app_8th_edNT.Models.User
@{
    ViewBag.Title = "Sign up";
}
<h1>Sign up</h1>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <form asp-action="Create" asp-controller="Users" method="post" class="form-horizontal">
            @* Render error messages partial *@
            @await Html.PartialAsync("_ErrorMessages", Model)

            <div class="form-group">
                <label for="Name">Name</label>
                <input name="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label for="Email">Email</label>
                <input name="Email" class="form-control" />
            </div>
            <div class="form-group">
                <label for="Password">Password</label>
                <input name="Password" type="password" class="form-control" />
            </div>
            <div class="form-group">
                <label for="PasswordConfirmation">Confirmation</label>
                <input name="PasswordConfirmation" type="password" class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary">Create my account</button>
        </form>
    </div>
</div>
