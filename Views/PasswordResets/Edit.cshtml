@model sample_rails_app_8th_edNT.Models.User
@{
    ViewBag.Title = "Reset password";
}
<h1>Reset password</h1>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <form asp-action="Update" asp-controller="PasswordResets" method="post" class="form-horizontal">
            @await Html.PartialAsync("_ErrorMessages", Model)
            <input type="hidden" name="email" value="@Model.Email" />
            <div class="form-group">
                <label for="Password">Password</label>
                <input name="password" type="password" class="form-control" />
            </div>
            <div class="form-group">
                <label for="PasswordConfirmation">Confirmation</label>
                <input name="passwordConfirmation" type="password" class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary">Update password</button>
        </form>
    </div>
</div>
